.sidebar
    .categories
        ul.categories__list
            - var items = ["Флагманы", "Бюджетная линейка"]
            each item in items
                li(class="categories__item" + ((item == "Бюджетная линейка") ? ' ' + 'active' : ''))
                    a(href="#").categories__link= item
    .filter
        ul.filter__list
            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Наличие в магазине
                .filter__content
                    ul.filter__choose
                        - var items = ["Во всех магазинах", "В ближайшем ко мне магазине"]
                        each item in items 
                            li.filter__choose-item
                                label.filter__choose-label 
                                    input(name="location" type="radio").filter__choose-input
                                    .filter__choose-elem
                                    .filter__chose-text= item
            li.filter__item
                .filter__title 
                    a(href="#").filter__title-link Бренды 
                .filter__content
                    ul.filter__choose.filter__choose_checkboxes
                        - var items = ["Lenovo", "Apple", "Samsung", "Asus", "Motorola"]
                        each item in items 
                            li.filter__choose-item
                                label.filter__choose-label 
                                    input(name="" type="checkbox").filter__choose-input
                                    .filter__choose-elem
                                    .filter__chose-text= item
                    .filter_reset-wrap
                        a(href="#").filter__reset Сбросить фильтр
            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Цена
                .filter__content
                    .filter__slider
                        .filter__slider-displays
                            .filter__slider-left
                                .filter__slider-text от
                                input(name="" type="text" placeholder="").filter__slider-input.filter__slider-input_from
                            .filter__slider-right
                                .filter__slider-text до
                                input(name="" type="text" placeholder="").filter__slider-input.filter__slider-input_to
                        div(class="filter__slider-element" data-min="0" data-max="35000")
            li.filter__item.filter__choose-color
                .filter__title
                    a(href="#").filter__title-link Цвет
                .filter__content
                    ul.filter__colors
                        - var colors = ['#ffffff', '#cdcdcd', '#000000', '#002d53', '#ff1100', '#fff324', '#ff9243', '#78c479', '#00a7ff', '#a670b0', '#f879b0', '#913d14']
                        each color in colors
                            li.filter__colors-item
                                a(href="#" style="background-color:" + color).filter__colors-link
            li.filter__item
                .filter__title
                    a(href="#").filter__title-link Операционная система
                .filter__content
                    .filter__content
                    ul.filter__choose.filter__choose_checkboxes
                        - var items = ['Android', 'iOs', 'Symbian', 'Windows Mobile', 'Custom']
                        each item in items 
                            li.filter__choose-item
                                label.filter__choose-label 
                                    input(name="" type="checkbox").filter__choose-input
                                    .filter__choose-elem
                                    .filter__chose-text= item
                    .filter_reset-wrap
                        a(href="#").filter__reset Сбросить фильтр




                        
                            

